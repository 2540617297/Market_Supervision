<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/lay_register_two_container"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:layout_marginLeft="40dp"
              android:layout_marginRight="40dp"
              android:orientation="vertical">
    <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingTop="20dp"
            android:background="@mipmap/government"
            android:scaleType="centerInside"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="市场监管行政执法卫士"
              android:textSize="20dp"
              android:layout_gravity="center"
              android:layout_marginBottom="20dp"
    ></TextView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <Button
                android:text="待办事项"
                android:onClick="onClick"
                android:id="@+id/back_log"
                android:background="@color/text_yellow"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_height="wrap_content">

        </Button>
        <Button
                android:text="统计报表"
                android:onClick="onClick"
                android:id="@+id/Statistic_Form"
                android:background="@color/text_yellow"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="综合查询"
                android:onClick="onClick"
                android:id="@+id/synthesize_query"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </Button>
        <Button
                android:text="移动执法"
                android:onClick="onClick"
                android:id="@+id/Mobile_Law"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="任务发布"
                android:onClick="onClick"
                android:id="@+id/task_distribution"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>

        <Button
                android:text="文件上传"
                android:onClick="onClick"
                android:id="@+id/fileChoose"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>

    </LinearLayout>

</LinearLayout>