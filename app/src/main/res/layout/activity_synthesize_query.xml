<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SynthesizeQuery">
    <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="180dp"
            android:layout_height="146dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@null"
            android:paddingTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/enforce"
            android:scaleType="centerInside"
    />
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_bar_txt_size"
            android:layout_marginBottom="20dp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="综合执法查询"
    >

    </TextView>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <Button
                android:text="巡查记录"
                android:onClick="onClick"
                android:id="@+id/Patrol_Record"
                android:background="@color/text_yellow"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_height="wrap_content">
        </Button>

        <Button
                android:text="企业信息查询"
                android:onClick="onClick"
                android:id="@+id/EnterPriseQuery"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="法规查询"
                android:onClick="onClick"
                android:id="@+id/law"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
        <Button
                android:text="定位显示"
                android:onClick="onClick"
                android:id="@+id/map"
                android:background="@color/text_yellow"
                android:layout_marginBottom="@dimen/font_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </Button>
    </LinearLayout>

</LinearLayout>