<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".SendUserInfo">
    <LinearLayout
            android:layout_width="match_parent"
            android:background="@mipmap/info_back"
            android:layout_height="240dp">

    </LinearLayout>
    <LinearLayout
            android:layout_marginTop="170dp"
            android:layout_width="140dp"
            android:background="@drawable/head"
            android:layout_centerHorizontal="true"
            android:layout_height="140dp">

    </LinearLayout>
    <ImageView
            android:layout_marginTop="200dp"
            android:id="@+id/iv_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@mipmap/icon"
            android:layout_centerHorizontal="true"
             />

    <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="300dp">
        <RelativeLayout
                android:id="@+id/re_xiangce"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_white"
                android:clickable="true"
                android:paddingLeft="12dp">
            <ImageView
                    android:id="@+id/iv_xiangce"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/head"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/iv_xiangce"
                    android:text="用户名"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/send_userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="140dp"
                    android:layout_toRightOf="@id/iv_xiangce"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />

        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/send_user_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_white"
                android:clickable="true"
                android:paddingLeft="12dp">
            <ImageView
                    android:id="@+id/send_user_id_text"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/id"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/send_user_id_text"
                    android:text="用户Id"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/send_userId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="140dp"
                    android:layout_toRightOf="@id/send_user_id_text"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />

        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/send_user_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_white"
                android:clickable="true"
                android:paddingLeft="12dp">
            <ImageView
                    android:id="@+id/send_user_name_text"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/id"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/send_user_name_text"
                    android:text="姓名"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/send_userNameCN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="140dp"
                    android:layout_toRightOf="@id/send_user_name_text"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />

        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/send_user_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/bg_white"
                android:clickable="true"
                android:paddingLeft="12dp">
            <ImageView
                    android:id="@+id/send_user_phone_text"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/id"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/send_user_phone_text"
                    android:text="电话号码"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <TextView
                    android:id="@+id/send_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="140dp"
                    android:layout_toRightOf="@id/send_user_phone_text"
                    android:textColor="#353535"
                    android:textSize="16sp" />
            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="#dadada" />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginRight="20dp"
                  android:layout_alignParentBottom="true">
        <Button
                android:layout_width="200dp"
                android:layout_weight="1"
                android:text="信息编辑"
                android:layout_marginRight="5dp"
                android:background="@color/text_yellow"
                android:layout_height="wrap_content">

        </Button>
        <Button
                android:layout_width="200dp"
                android:layout_weight="1"
                android:id="@+id/send_chat"
                android:background="@color/text_yellow"
                android:layout_marginLeft="5dp"
                android:text="发送信息"
                android:layout_height="wrap_content">

        </Button>

    </LinearLayout>

</RelativeLayout>